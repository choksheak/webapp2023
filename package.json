{
  "name": "webapp2023",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "VITE_TEST_ENV=hello vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "fix": "eslint . --ext ts,tsx --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "preview": "vite preview",
    "prod": "vite preview",
    "test": "vitest --watch=false",
    "test:watch": "vitest",
    "coverage": "vitest --coverage --watch=false",
    "coverage:watch": "vitest --coverage",
    "deps": "depcruise --config .dependency-cruiser.cjs src",
    "preflight": "yarn build && yarn typecheck && yarn lint && yarn deps && yarn test"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@typescript-eslint/typescript-estree": "^6.12.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^0.34.6",
    "dependency-cruiser": "13.1.5",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^22.1.0",
    "knip": "^2.43.0",
    "prettier": "^3.1.0",
    "shelljs": "^0.8.5",
    "strip-ansi": "6.0.1",
    "typescript": "5.2.2",
    "vite": "^5.0.0",
    "vitest": "^0.34.6"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": "18.15.0",
    "yarn": "^1.22.19"
  }
}
